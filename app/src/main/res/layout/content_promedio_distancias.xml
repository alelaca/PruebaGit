        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calcular"
                android:onClick="ejecutarPromedios"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancelar"
                android:onClick="cancelarPromedios"
                android:layout_marginLeft="110dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calcular para la distancia: "
                android:layout_marginTop="50dp"
                android:textSize="14dp"/>

            <EditText
                android:id="@+id/distancia_a_calcular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="165dp"
                android:textSize="14dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cantidad de medidas: "
                android:layout_marginTop="80dp"
                android:textSize="14dp"/>

            <EditText
                android:id="@+id/cantidad_medidas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="165dp"
                android:textSize="14dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distancia medida:"
                android:textSize="14dp"
                android:layout_marginTop="110dp"/>

            <TextView
                android:id="@+id/distancia_medida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:layout_marginTop="110dp"
                android:layout_marginLeft="165dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medidas restantes"
                android:textSize="14dp"
                android:layout_marginTop="140dp"/>

            <TextView
                android:id="@+id/medidas_restantes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:layout_marginTop="140dp"
                android:layout_marginLeft="165dp"/>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>
